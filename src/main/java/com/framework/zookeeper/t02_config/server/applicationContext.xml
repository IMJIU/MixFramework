<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/context
 http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--<context:annotation-config />-->
    <!-- 使用annotation 自动注册bean,并保证@Required,@Autowired的属性被注入 -->
    <context:component-scan base-package="com.framework.zookeeper.t02_config.server.*">
        <!-- 不扫描Controller注解的类 -->
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>
    <bean id="scanLoad" class="com.framework.zookeeper.t02_config.server.ScanLoad" init-method="init">
    	<constructor-arg>
    		<value>com.web</value>
    	</constructor-arg>
    	<constructor-arg>
    	<value>localhost:2181,localhost:2182,localhost:2183</value>
    	</constructor-arg>
    	<constructor-arg>
    	<value>userCenter</value>
    	</constructor-arg>    
    </bean>
</beans>